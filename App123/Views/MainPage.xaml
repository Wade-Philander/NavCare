<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App123.Views.MainPage"
             Title="{Binding Title}"
             BackgroundImage="welcome3"
             >
   

    <StackLayout>
        <Label Text="WELCOME TO NAV-CARE" TextColor="Gold"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Center"
               FontSize="Large"
               Scale="1.4" 
               Margin="40"
               />

        <Label Text="WHERE MEDICARE AND TECHNOLOGY MEET" TextColor="Gold"
               HorizontalOptions="Center"
               VerticalOptions="StartAndExpand"
               FontSize="Medium"
               />

        <Button Text="SIGN UP" TextColor="DarkBlue" FontSize="Large"
                
                BackgroundColor="Gold"
                VerticalOptions="EndAndExpand"
               Command="{Binding SignUpCommand}"
                />

        <Button Text="LOGIN" Command="{Binding Login}"  TextColor="DarkBlue" BackgroundColor="Gold"
                />



    </StackLayout>

</ContentPage>